WindowManager:
    Tasks:

<TaskList>:
    Button:
        text: 'Base'
        on_release: lbl.text = inp_Tarefa.text
    Label:
        id: lbl
        text: '******'

<Tasks>
    name: 'Tasks'
    BoxLayout:
        id:contener
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 64 / 255.0, 64 / 255.0, 64 / 255.0
            Rectangle:
                size: self.size


        BoxLayout:
            canvas:
                Color:
                    rgb: 51/255, 65/255, 92/255
                Rectangle:
                    size: self.size

            orientation: 'horizontal'
            padding: 7
            spacing: 7
            size_hint: 1, None
            height: 60

            Label:
                text: 'Tarefa'
                halign: 'right'
                valign: 'top'
                size_hint_x: 1

            TextInput:
                id: inp_Tarefa
                size_hint_x: 2

            Button:
                text:'Iniciar'
                background_color: 4/255, 102/255, 200/255

    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height
                
                Label:
                    text:'00001'
                Label:
                    text:'00002'
                Label:
                    text:'00003'
                    